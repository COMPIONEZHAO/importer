<!-- This is a config file with as many configuration options being set,
     so that we can test the max out of validation.
     -->
<importer>

    <tempDir>/some/path/</tempDir>
    <maxFileCacheSize>99</maxFileCacheSize>
    <maxFilePoolCacheSize>99</maxFilePoolCacheSize>
    <parseErrorsSaveDir>/some/path</parseErrorsSaveDir>

    <preParseHandlers>
        <tagger class="com.norconex.importer.handler.tagger.impl.DOMTagger"
                fromField="PUB_AUTHORS">
          <dom selector="author firstname"
               toField="EXP_FIRST-NAME-AUX"
               extract="ownText"
               defaultValue="NO_FIRST-NAME" />
          <dom selector="author middlename"
               toField="EXP_MIDDLE-NAME-AUX"
               extract="ownText"
               defaultValue="NO_MIDDLE-NAME" />
          <dom selector="author lastname"
               extract="ownText"
               toField="EXP_LAST-NAME"
               defaultValue="NO_LAST-NAME" />
          <restrictTo caseSensitive="true" field="bfield">.*blah</restrictTo>
          <restrictTo caseSensitive="false" field="afield">.*</restrictTo>
        </tagger>
        <!-- 
        <transformer class="..." />
        <filter class="..." />
        <splitter class="..." />
         -->
    </preParseHandlers>

    <!-- 
    <documentParserFactory class="..." />
    -->

